# ============================================
# ScoutLens Environment Variables
# ============================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# ============================================
# SUPABASE (Required for Pro access)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase service_role key (NOT the anon key!)
# This key has full database access - keep it secret!
SUPABASE_SERVICE_KEY=eyJhbGciOi...your-service-role-key

# ============================================
# STRIPE (Payment Processing)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys

# Your Stripe secret key
STRIPE_SECRET_KEY=sk_live_...your-secret-key

# Webhook signing secret (for verifying webhook events)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...your-webhook-secret

# ============================================
# PAYPAL (Alternative Payment Processing)
# ============================================
# Get these from: https://developer.paypal.com/dashboard/applications

# Your PayPal client ID
PAYPAL_CLIENT_ID=your-paypal-client-id

# Your PayPal client secret
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Webhook ID for verification
PAYPAL_WEBHOOK_ID=your-webhook-id

# ============================================
# OPTIONAL: Analytics & Monitoring
# ============================================

# Vercel Analytics (automatically set by Vercel)
# VERCEL_ANALYTICS_ID=

# Error tracking (e.g., Sentry)
# SENTRY_DSN=

# ============================================
# DEVELOPMENT/TESTING
# ============================================

# Set to 'development' for local testing
NODE_ENV=production

# Enable debug logging (set to 'true' for verbose logs)
DEBUG=false
