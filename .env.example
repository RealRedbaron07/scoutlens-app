# ============================================
# ScoutLens Environment Variables
# ============================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# ============================================
# SUPABASE (Required for Pro access)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase service_role key (NOT the anon key!)
# This key has full database access - keep it secret!
SUPABASE_SERVICE_KEY=eyJhbGciOi...your-service-role-key

# ============================================
# PAYPAL (Primary Payment Processing)
# ============================================
# Get these from: https://developer.paypal.com/dashboard/applications

# Your PayPal client ID (for SDK integration if needed)
PAYPAL_CLIENT_ID=your-paypal-client-id

# Your PayPal client secret (for API calls)
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Webhook ID for signature verification
# Get from: https://developer.paypal.com/dashboard/webhooks
PAYPAL_WEBHOOK_ID=your-webhook-id

# ============================================
# OPTIONAL: Analytics & Monitoring
# ============================================

# Vercel Analytics (automatically set by Vercel)
# VERCEL_ANALYTICS_ID=

# Error tracking (e.g., Sentry)
# SENTRY_DSN=

# ============================================
# DEVELOPMENT/TESTING
# ============================================

# Set to 'development' for local testing
NODE_ENV=production

# Enable debug logging (set to 'true' for verbose logs)
DEBUG=false
